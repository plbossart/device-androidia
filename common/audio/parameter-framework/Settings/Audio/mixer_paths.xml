<mixer>
  <!-- These are the initial mixer settings -->
  <ctl name="Master Playback Volume" value="74" />
  <ctl name="Headphone Playback Volume" value="74 74" />
  <ctl name="Speaker Playback Volume" value="74 74" />
  <ctl name="Auto-Mute Mode" value="Enabled" />
  <ctl name="Capture Volume" value="80" />
  <ctl name="Internal Mic Boost Volume" value="0 0" />
  <ctl name="Mic Boost Volume" value="0 0" />

  <ctl name="Master Playback Switch" value="0" />
  <ctl name="Headphone Playback Switch" value="0 0" />
  <ctl name="Speaker Playback Switch" value="0 0" />
  <ctl name="Capture Switch" value="0 0" />

  <path name="speaker">
    <ctl name="Master Playback Switch" value="1" />
    <ctl name="Speaker Playback Switch" value="1 1" />
  </path>

  <path name="headphone">
    <ctl name="Master Playback Switch" value="1" />
    <ctl name="Headphone Playback Switch" value="1 1" />
  </path>

  <path name="speaker-headphone">
      <path name="speaker"/>
      <path name="headphone"/>
  </path>

  <path name="mic">
    <ctl name="Capture Switch" value="1 1" />
  </path>

  <path name="headset">
    <ctl name="Capture Switch" value="1 1" />
  </path>
</mixer>
